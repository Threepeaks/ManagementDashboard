
@model List<ManagementDashboard.Models.DepositBalance>


<div class="card card-primary">
    <div class="card-header">
        Customer
    </div>

    <div class="card">
        <table class="table table-condensed table-responsive table-striped table-sm">
            <thead>
                <tr>
                    <th>Customer</th>

                    <th class="text-right">Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Customer</td>
                        <td class="text-right">@item.Amount.ToString("N")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>