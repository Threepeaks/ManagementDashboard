
@model List<ManagementDashboard.Models.NewGrowth>

<table class="table table-condensed table-responsive table-striped table-sm">
    <thead>
        <tr>
            <th>Customer</th>
            <th class="text-right>Type</thclass="text-right>
            <th>@Model.FirstOrDefault().PrevDateTime.ToString("MMM")</th>
            <th>@Model.FirstOrDefault().NextDatetime.ToString("MMM")</th>
            
            <th class="text-right">Percent</th>
            <th class="text-right">Difference</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CustomerReference</td>
                <td>@item.GetTypeEnumString()</td>
                <td><div class="text-right">@item.PrevValue.ToString("#,##0.00")</div></td>
                <td><div class="text-right">@item.NextValue.ToString("#,##0.00")</div></td>
                
                <td class="text-right">@string.Format("{0:0.00}", item.Percent)%</td>
                <td class="text-right">@item.Difference.ToString("#,##0.00")</td>

            </tr>
        }
    </tbody>
</table>
