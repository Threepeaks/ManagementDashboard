@model List<ManagementDashboard.Models.GetTopDebitValue>

<table class="table table-condensed table-responsive table-striped table-sm" >
    <thead>
        <tr>
        <th>Customer</th>
        <th>Debit</th>
        <th>Action Date</th>
        <th>Rrb</th>
        <th class="text-right">Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CustomerRef</td>
                <td>@item.DebitRef</td>
                <td>@item.ActionDate.ToString("dd-MM-yyyy")</td>
                <td>@item.Rbr</td>
                <td class="text-right">@item.Amount.ToString("N")</td>
            </tr>
        }
    </tbody>
</table>