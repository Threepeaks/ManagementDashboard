
@model List<ManagementDashboard.Models.GetTopValueCustomer>

<table class="table table-condensed table-responsive table-striped table-sm">
    <thead>
        <tr>
            <th>Customer</th>
            <th class="text-right">Collections</th>
            <th class="text-right">No. Records</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Customer</td>
                <td class="text-right">@item.Collections.ToString("N")</td>
                <td class="text-right">@item.NumOfRecords</td>
            </tr>
        }
    </tbody>
</table>