@model List<ManagementDashboard.Models.DepositMovement>

<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Date</th>
            <th class="text-right">Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Customer</td>
                <td>@item.Date.ToString("dd-MM-yyyy")</td>
                <td class="text-right">@item.Value.ToString("N")</td>
            </tr>
        }
    </tbody>
</table>
