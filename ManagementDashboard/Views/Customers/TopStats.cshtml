@section scripts {
    <script>
        $().ready(function () {
                    //Html.Action("GetTopValueCustomers", "Top", new { id = 0 })
               aJaxPost("@Url.Action("GetTopValueCustomers", "Customers")", { id: 0 }, "#GetTopValueCustomers0");
               aJaxPost("@Url.Action("GetTopValueCustomers", "Customers")", { id: 1 }, "#GetTopValueCustomers1");
               aJaxPost("@Url.Action("GetTopValueCustomers", "Customers")", { id: 2 }, "#GetTopValueCustomers2");

