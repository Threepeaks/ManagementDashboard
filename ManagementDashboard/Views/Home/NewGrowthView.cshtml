
@{
    ViewBag.Title = "NewGrowthView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}





<h2>New Growth</h2>

<div class="card card-primary">
    <div class="card-header">
        <a href="#" id="NewGrowth"></a>
        New Growth Report
    </div>

    <div class="row">

        <div class="col-md-4">
            <div class="card">
                <div class="card-title">
                    <h4>@DateTime.Now.AddMonths(-2).ToString("MMMM yyyy") - @DateTime.Now.AddMonths(-1).ToString("MMMM yyyy")</h4>
                </div>
                <div class="card-body">
                    <div class="panel-body1" style="overflow:auto;">
                        <div id="NewGrowth0">Loading....</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-title">
                    <h4>@DateTime.Now.AddMonths(-3).ToString("MMMM yyyy") - @DateTime.Now.AddMonths(-2).ToString("MMMM yyyy")</h4>
                </div>
                <div class="card-body">
                    <div class="panel-body1" style="overflow:auto;">
                        <div id="NewGrowth1">Loading....</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-title">
                    <h4>@DateTime.Now.AddMonths(-4).ToString("MMMM yyyy") - @DateTime.Now.AddMonths(-3).ToString("MMMM yyyy")</h4>
                </div>
                <div class="card-body">
                    <div class="panel-body1" style="overflow:auto;">
                        <div id="NewGrowth2">Loading....</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{

    <script>
        $().ready(function () {

            $("#PrintThis").click(function () {
                $('#Report').printThis();
            });

        });

    </script>


    <script>

        $().ready(function () {


            function aJaxPost(action, myData, target) {
                $.ajax({
                    method: "POST",
                    url: action,
                    data: myData,
                    success: function (response) {
                        $(target).html(response);
                        // alert(response);
                        // alert(target + " Details saved successfully!!!");
                    },
                    error: function (xhr, ajaxOptions, thrownError) {
                        $(target).html(xhr.status);
                        //alert(xhr.status);
                        //alert(thrownError);
                    }
                });
            }

        aJaxPost("@Url.Action("NewGrowth", "Top")", { id: 0 }, "#NewGrowth0");
                aJaxPost("@Url.Action("NewGrowth", "Top")", { id: 1 }, "#NewGrowth1");
                aJaxPost("@Url.Action("NewGrowth", "Top")", { id: 2 }, "#NewGrowth2");



        });

    </script>


}
