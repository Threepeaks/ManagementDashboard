               //Html.Action("OverviewReportRecords", "TPMS", new { id = 1 })
               aJaxPost("@Url.Action("OverviewReportRecords", "TPMS")", { id: 1 }, "#OverviewReportRecords1");

               //Html.Action("OverviewReportValues", "TPMS", new { id = 1 })
               aJaxPost("@Url.Action("OverviewReportValues", "TPMS")", { id: 1 }, "#OverviewReportValues1");

        });

    </script>


