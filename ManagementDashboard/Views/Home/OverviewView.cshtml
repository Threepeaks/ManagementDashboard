@section scripts
{

    <script>
        $().ready(function () {

            $("#PrintThis").click(function () {
                $('#Report').printThis();
            });

        });

    </script>


    <script>

        $().ready(function () {


            function aJaxPost(action, myData, target) {
                $.ajax({
                    method: "POST",
                    url: action,
                    data: myData,
                    success: function (response) {
                        $(target).html(response);
                        // alert(response);
                        // alert(target + " Details saved successfully!!!");
                    },
                    error: function (xhr, ajaxOptions, thrownError) {
                        $(target).html(xhr.status);
                        //alert(xhr.status);
                        //alert(thrownError);
                    }
                });
            }

        //Html.Action("OverviewReportRecords", "TPMS", new { id = 0 })
               aJaxPost("@Url.Action("OverviewReportRecords", "TPMS")", { id: 0 }, "#OverviewReportRecords0");

               //Html.Action("OverviewReportValues", "TPMS", new { id = 0 })
